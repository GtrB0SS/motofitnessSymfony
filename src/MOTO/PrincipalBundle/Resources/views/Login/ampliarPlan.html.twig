{% extends '::base.html.twig' %}

{%  block body %}
    <div class="container">
        <nav class='navbar navbar-light bg-light row'>
            {% if botones.botonLogin != "-" %}
                {# Si la sesi칩n NO est치 iniciada #}
                {{ botones.botonLogin | raw }}
                {{ botones.botonSignUp | raw }}
            {% else %}
                {# Si la sesi칩n SI est치 iniciada #}
                <a class='navbar-brand' href='{{ path('moto_principal_homepage') }}'>Inicio</a>
                {{ botones.botonProgreso | raw }}
                {{ botones.botonResumen | raw }}
                {{ botones.botonDietas | raw }}
                {{ botones.botonTablas | raw}}
                {{ botones.botonLogout | raw}}
                
            {% endif %}
        </nav>
        <br>
        <form action ="{{path('modificarPlan')}}" method="post">

            {{form_widget(form)}}
            <button type="submit" class="btn btn-primary">Actualizar plan</button>
        </form>
        <br>
        {% if error != '-' %}
            <div class="alert alert-danger" role="alert">
                <p>{{ error }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}