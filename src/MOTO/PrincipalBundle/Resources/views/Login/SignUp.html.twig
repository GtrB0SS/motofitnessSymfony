{% extends '::base.html.twig' %}

{%  block body %}
    <div class="container">
        <nav class='navbar navbar-light bg-light row'>

            <a class='navbar-brand' href='{{path('_login')}}'>LogIn</a>
            <a class='navbar-brand' href='{{path('_signup')}}'>SignUp</a>
        </nav>
        <br>
        <form action ="{{path('_signup')}}" method="post">

            {{form_widget(form)}}
            <button type="submit" class="btn btn-primary">Registrarse</button>



        </form>
        <br>
        {% if error != '-' %}
            <div class="alert alert-danger" role="alert">
                <p>{{ error }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}