{% extends "::base.html.twig" %}

{% block title %}MOTOPrincipalBundle:Login:Login{% endblock %}

{% block body %}
    <div class="container">
        <nav class='navbar navbar-light bg-light row'>

            <a class='navbar-brand' href='{{path('_login')}}'>LogIn</a>
            <a class='navbar-brand' href='{{path('_signup')}}'>SignUp</a>
        </nav>
        <br>
        <form action ="{{path('_login')}}" method="post">

            {{form_widget(form)}}
            <input type="submit" value="Iniciar sesion"/>
        </form>

        <br>
        {% if error != '-' %}
            <div class="alert alert-danger" role="alert">
                <p>{{ error }}</p>
            </div>
        {% endif %}
    </div>


{% endblock %}
