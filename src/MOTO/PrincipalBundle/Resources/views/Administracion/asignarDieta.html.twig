{% extends "::base.html.twig" %}

{% block title %}MOTOPrincipalBundle:Administracion:asignarDieta{% endblock %}

{% block body %}
    <div class="container">


        {% if administrador is defined and administrador == "true"%}
            <nav class='navbar navbar-light bg-light row'>
                <a class='navbar-brand' href='{{path('verResumenCliente')}}'>Resumen de mis clientes</a>
                <a class='navbar-brand' href='{{path('principal_administracion')}}'>Administracion</a>
                <a class='navbar-brand' href='{{path('_logout')}}'>Logout</a>
            </nav>


        {% endif %}

        <form action ="{{path('asignar_dieta')}}" method="post" class="px-4 py-3"> 

            <div class="form-group">
                <label for="exampleDropdownFormEmail1">Tus clientes</label>
                {{form_widget(form.cliente, {'attr': {'class': 'form-control'}})}}
            </div>

            <div class="form-group">
                <label for="exampleDropdownFormEmail1">Dietas disponibles</label>
                {{form_widget(form.dieta, {'attr': {'class': 'form-control'}})}}
            </div>

            {{ form_rest(form) }}
            <button type="submit" class="btn btn-primary">Asignar dieta</button>
        </form>
        {% if error != '-' %}
            <div class="alert alert-danger" role="alert">
                <p>{{ error }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
